---
import Navbar from "@components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
    <script is:inline src="/js/Tabs.js"></script>
    <script is:inline src="/js/Navbar.js"></script>
    <script is:inline src="/js/planView.js"></script>
    <script is:inline src="/js/Appear.js"></script>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  /* form ka scene  */
  .appear {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: black;
  }

  /* form ka scene close  */

  /* lightbox styles  */
  .slider {
    max-height: max-content;
    position: relative;
    width: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1em;
    border: none;
  }
  .slider:focus {
    outline: none;
  }
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    justify-content: center;
    align-items: center;
    z-index: 999;
  }
  .lightbox img {
    max-width: 90%;
    max-height: 90%;
    border: 2px solid #fff;
    border-radius: 8px;
  }
  .close-btn,
  .nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 24px;
    color: #fff;
    cursor: pointer;
    background: rgba(0, 0, 0, 0.5);
    padding: 10px;
    border: none;
    border-radius: 50%;
    outline: none;
    transition: all 0.3s;
  }
  .close-btn:hover,
  .nav-btn:hover {
    background: rgba(255, 255, 255, 0.8);
    color: #000;
  }
  .close-btn {
    top: 10px;
    right: 10px;
  }
  .prev-btn {
    left: 20px;
  }
  .next-btn {
    right: 20px;
  }
</style>
