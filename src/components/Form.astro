---
import { Image } from "astro:assets";
// import logo from "@assets/logo.png";
const utm_source = Astro.url.searchParams.get("utm_source") || "Landing Page";
const utm_sourcecampaign =
  Astro.url.searchParams.get("utm_sourcecampaign") ||
  Astro.url.searchParams.get("utm_campaign") ||
  "";
const utm_sourcemedium =
  Astro.url.searchParams.get("utm_sourcemedium") ||
  Astro.url.searchParams.get("utm_medium") ||
  "";
const utm_sourcecontent =
  Astro.url.searchParams.get("utm_sourcecontent") ||
  Astro.url.searchParams.get("utm_content") ||
  "";
const utm_interestedin = "Pearl Gardens"; // TODO: Update this
---

<section
  id="form_block"
  class="fixed left-0 right-0 z-50 flex items-center justify-center transition-all -top-full"
>
  <div
    class="absolute top-0 bottom-0 left-0 right-0 bg-black -z-10 cancel opacity-30"
  >
  </div>
  <div class="flex border-2 rounded-md">
    <div
      class="flex-col gap-5 px-4 bg-themeBlue-0 border-r-2 border-gray-200 hidden md:flex"
    >
      <h4 class="text-xl font-bold text-white">We Promise</h4>
      <!-- instant call back  -->
      <div class="flex flex-col items-center justify-center gap-2 mt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="mx-auto mt-4 fill-white"
          height="40"
          width="40"
          viewBox="0 0 512 512"
          ><path
            d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"
          ></path></svg
        >
        <h4 class="font-extrabold text-white font-lato text-md">
          Instant Call back
        </h4>
      </div>
      <!-- instant callback close  -->
      <!-- free site visit   -->
      <div class="flex flex-col items-center justify-center gap-2 mt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="mx-auto mt-4 fill-white"
          height="40"
          width="40"
          viewBox="0 0 384 512"
          ><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
          <path
            d="M48 0C21.5 0 0 21.5 0 48V464c0 26.5 21.5 48 48 48h96V432c0-26.5 21.5-48 48-48s48 21.5 48 48v80h96c26.5 0 48-21.5 48-48V48c0-26.5-21.5-48-48-48H48zM64 240c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V240zm112-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H176c-8.8 0-16-7.2-16-16V240c0-8.8 7.2-16 16-16zm80 16c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V240zM80 96h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16zm80 16c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H176c-8.8 0-16-7.2-16-16V112zM272 96h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16z"
          ></path></svg
        >
        <h4 class="font-extrabold text-white font-lato text-md">
          Free Site Visit
        </h4>
      </div>
      <!-- free site visit   -->
      <!-- Unmatched Price   -->
      <div class="flex flex-col items-center justify-center gap-2 mt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="mx-auto mt-4 fill-white"
          height="40"
          width="40"
          viewBox="0 0 576 512"
          ><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
          <path
            d="M312 24V34.5c6.4 1.2 12.6 2.7 18.2 4.2c12.8 3.4 20.4 16.6 17 29.4s-16.6 20.4-29.4 17c-10.9-2.9-21.1-4.9-30.2-5c-7.3-.1-14.7 1.7-19.4 4.4c-2.1 1.3-3.1 2.4-3.5 3c-.3 .5-.7 1.2-.7 2.8c0 .3 0 .5 0 .6c.2 .2 .9 1.2 3.3 2.6c5.8 3.5 14.4 6.2 27.4 10.1l.9 .3c11.1 3.3 25.9 7.8 37.9 15.3c13.7 8.6 26.1 22.9 26.4 44.9c.3 22.5-11.4 38.9-26.7 48.5c-6.7 4.1-13.9 7-21.3 8.8V232c0 13.3-10.7 24-24 24s-24-10.7-24-24V220.6c-9.5-2.3-18.2-5.3-25.6-7.8c-2.1-.7-4.1-1.4-6-2c-12.6-4.2-19.4-17.8-15.2-30.4s17.8-19.4 30.4-15.2c2.6 .9 5 1.7 7.3 2.5c13.6 4.6 23.4 7.9 33.9 8.3c8 .3 15.1-1.6 19.2-4.1c1.9-1.2 2.8-2.2 3.2-2.9c.4-.6 .9-1.8 .8-4.1l0-.2c0-1 0-2.1-4-4.6c-5.7-3.6-14.3-6.4-27.1-10.3l-1.9-.6c-10.8-3.2-25-7.5-36.4-14.4c-13.5-8.1-26.5-22-26.6-44.1c-.1-22.9 12.9-38.6 27.7-47.4c6.4-3.8 13.3-6.4 20.2-8.2V24c0-13.3 10.7-24 24-24s24 10.7 24 24zM568.2 336.3c13.1 17.8 9.3 42.8-8.5 55.9L433.1 485.5c-23.4 17.2-51.6 26.5-80.7 26.5H192 32c-17.7 0-32-14.3-32-32V416c0-17.7 14.3-32 32-32H68.8l44.9-36c22.7-18.2 50.9-28 80-28H272h16 64c17.7 0 32 14.3 32 32s-14.3 32-32 32H288 272c-8.8 0-16 7.2-16 16s7.2 16 16 16H392.6l119.7-88.2c17.8-13.1 42.8-9.3 55.9 8.5zM193.6 384l0 0-.9 0c.3 0 .6 0 .9 0z"
          ></path></svg
        >
        <h4 class="font-extrabold text-white font-lato text-md">
          Unmatched Price
        </h4>
      </div>
      <!-- Unmatched Price   -->
    </div>

    <div class="relative items-center p-4 mx-auto bg-themeBlue-0">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="absolute transition-all cursor-pointer cancel top-2 hover:fill-themeOrange-0 right-2 fill-slate-600"
        height="25"
        width="25"
        viewBox="0 0 384 512"
        ><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
        <path
          d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
        ></path></svg
      >
      <path
        d="M6.99486 7.00636C6.60433 7.39689 6.60433 8.03005 6.99486 8.42058L10.58 12.0057L6.99486 15.5909C6.60433 15.9814 6.60433 16.6146 6.99486 17.0051C7.38538 17.3956 8.01855 17.3956 8.40907 17.0051L11.9942 13.4199L15.5794 17.0051C15.9699 17.3956 16.6031 17.3956 16.9936 17.0051C17.3841 16.6146 17.3841 15.9814 16.9936 15.5909L13.4084 12.0057L16.9936 8.42059C17.3841 8.03007 17.3841 7.3969 16.9936 7.00638C16.603 6.61585 15.9699 6.61585 15.5794 7.00638L11.9942 10.5915L8.40907 7.00636C8.01855 6.61584 7.38538 6.61584 6.99486 7.00636Z"
        fill="#0F0F0F"></path>

      <!-- <Image src={logo} width={90} height={90} class="mx-auto" alt={"logo"} /> -->
      logo here
      <h5
        class="mb-2 text-xl font-bold text-center text-white uppercase font-lato"
      >
        Get In Touch
      </h5>
      <form action="/api/submit" method="post" onsubmit="">
        <input type="hidden" name="utm_source" value={utm_source} />
        <input
          type="hidden"
          name="utm_sourcecampaign"
          value={utm_sourcecampaign}
        />
        <input type="hidden" name="utm_sourcemedium" value={utm_sourcemedium} />
        <input
          type="hidden"
          name="utm_sourcecontent"
          value={utm_sourcecontent}
        />
        <input type="hidden" name="utm_interestedin" value={utm_interestedin} />

        <div class="flex flex-col max-w-xs p-2 mx-auto w-96">
          <input
            type="text"
            name="first_name"
            id="first_name"
            class="mb-6 text-themeBlue-0 border-t-0 border-b-2 border-themeOrange-0 text-md border-x-0 focus:ring-0"
            placeholder="First Name"
            required
          />

          <input
            type="text"
            name="last_name"
            id="last_name"
            placeholder="Last Name"
            class="mb-6 text-themeBlue-0 border-t-0 border-b-2 border-themeOrange-0 text-md border-x-0 focus:ring-0"
            required
          />

          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            class="mb-6 text-themeBlue-0 border-t-0 border-b-2 border-themeOrange-0 border-x-0 text-md focus:ring-0"
            required
          />

          <input
            type="tel"
            name="phone_number"
            id="phone_number"
            pattern="\\d{10}"
            class="mb-6 text-themeBlue-0 border-t-0 border-b-2 border-themeBlue-0 border-x-0 text-md focus:ring-0"
            placeholder="Phone Number (10 digits)"
            title="Please enter a 10-digit phone number (numbers only)"
            required
          />
          <button
            type="submit"
            class="px-4 py-2 mx-auto mt-4 text-lg font-bold text-themeBlue-0 uppercase bg-white font-lato w-max"
            >Submit</button
          >
        </div>
      </form>
    </div>
  </div>
</section>
