---
import { Image } from "astro:assets";
// import logo from "@assets/logo.png";
---

<nav class="sticky top-0 left-0 right-0 p-2">
  <div class="w-full flex justify-between gap-10 items-center">
    <a href="#home" class="text-xl">
      <!-- <Image src={logo} alt="Logo" width={70} height={70} /> -->
      logo
    </a>

    <div class="hidden pr-4 lg:flex gap-8 space-x-4">
      <a
        class="text-md font-lato uppercase hover:text-gray-300 text-white"
        href="#home">Home</a
      >
      <a
        class="text-md font-lato uppercase hover:text-gray-300 text-white"
        href="#overview">Overview</a
      >
      <a
        class="text-md font-lato uppercase hover:text-gray-300 text-white"
        href="#Amenities">Amenities</a
      >
      <a
        class="text-md font-lato uppercase hover:text-gray-300 text-white"
        href="#gallery">Gallery</a
      >
      <a
        class="text-md font-lato uppercase hover:text-gray-300 text-white"
        href="#plans">Plans</a
      >
      <a
        class="text-md font-lato uppercase hover:text-gray-300 text-white"
        href="#configurations">Configurations</a
      >
      <a
        class="text-md font-lato uppercase hover:text-gray-300 text-white"
        href="#Location">Location</a
      >
    </div>
    <button
      class="bg-white px-4 py-2 uppercase text-themeBlue-0 font-extrabold rounded-md block lg:hidden"
      onclick="formPopup()">Contact us</button
    >
    <div class="lg:hidden">
      <button id="mobile-menu-button" class="text-white">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-10 w-10"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h8m-8 6h16"></path>
        </svg>
      </button>

      <div
        id="mobile-menu"
        class="hidden absolute top-24 right-10 mt-2 bg-white border shadow-md rounded-md"
      >
        <div id="menu-container" class="flex flex-col w-40 space-y-4 p-4">
          <a
            class="hover:bg-themeBlue-0 uppercase rounded-md hover:text-white font-semibold text-md"
            href="#home">Home</a
          >
          <a
            class="hover:bg-themeBlue-0 uppercase rounded-md hover:text-white font-semibold text-md"
            href="#overview">Overview</a
          >
          <a
            class="hover:bg-themeBlue-0 uppercase rounded-md hover:text-white font-semibold text-md"
            href="#Amenities">Amenities</a
          >
          <a
            class="hover:bg-themeBlue-0 uppercase rounded-md hover:text-white font-semibold text-md"
            href="#gallery">Gallery</a
          >
          <a
            class="hover:bg-themeBlue-0 uppercase rounded-md hover:text-white font-semibold text-md"
            href="#plans">plans</a
          >
          <a
            class="hover:bg-themeBlue-0 uppercase rounded-md hover:text-white font-semibold text-md"
            href="#configurations">CONFIGURATIONS</a
          >

          <a
            class="hover:bg-themeBlue-0 uppercase rounded-md hover:text-white font-semibold text-md"
            href="#Location">Location</a
          >
        </div>
      </div>
    </div>
  </div>
</nav>
